p() {
    cd=0
    [ "$1" = cd ] && cd=1 && shift 1
    opts=$(printf "%s\n" "$XDG_STATE_HOME/vim-sessions/"* |
        sed -e 's/.*\///' -e 's/\.vim$//')

    [ "$1" ] &&
        while read -r opt; do
            case "$opt" in
                *"$1"*) vimsource="$opt".vim ; break ;;
            esac
        done <<-EOF
            $opts
EOF

    [ -z "$1" ] && vimsource=$(printf "%s" "$opts" |
        fzf --preview 'grep cd "$XDG_STATE_HOME/vim-sessions/"{}.vim | sed "s/cd //"| sed "s_~_${HOME}_" | xargs -I "KK" find "KK" -iname "README*" -exec "cat" "\{}" ";"').vim

    [ "$vimsource" = ".vim" ] && return

    if [ -e "/tmp/${vimsource#.*}" ]; then
        # yes this should be %, i'm not sure why the above is #
        # % will remove the .vim at the end
        notify-send "going to ${vimsource%.*}"
        select-window "CODING PROJECT: ${vimsource%.*}"
        exit
    else
        cd "$(eval echo "$(grep -Po '(?<=cd).*' "$XDG_STATE_HOME/vim-sessions/$vimsource")")"
        [ "$cd" = 1 ] && return
        printf "\x1b]2;%s\a" "CODING PROJECT: ${vimsource%.*}"
        $EDITOR --listen "/tmp/${vimsource#.*}" -S "$XDG_STATE_HOME/vim-sessions/$vimsource" ||
    fi
}

